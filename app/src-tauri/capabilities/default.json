{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "opener:default",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-read-image",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-screencapture-select-area",
          "cmd": "screencapture",
          "args": [
            "-i",
            "-p"
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-screencapture-desktop",
          "cmd": "screencapture",
          "args": [
             "-p"
          ]
        }
      ]
    },
    "fs:default",
    "clipboard-manager:default"
  ]
}